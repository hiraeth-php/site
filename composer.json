{
    "name": "hiraeth/app",
    "version": "3.0-beta",
    "description": "A PHP Nano Framework",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "license": "MIT",
    "authors": [
        {
            "name":  "Matthew J. Sahagian",
            "email": "matthew.sahagian@gmail.com",
            "role":  "Lead Architect / Developer"
        }
    ],
    "require": {
        "php": ">=8.2",
        "imarc/opus": "^2.0",
        "hiraeth/core": "^3.0",
        "hiraeth/bootstrap": "^3.0@beta",
        "hiraeth/sentry": "^3.0",
        "dotink/json": "^1.0",
        "hiraeth/runner": "^3.0@beta",
        "hiraeth/commonmark": "^3.0@beta",
        "hiraeth/twig-markdown": "^3.0@beta",
        "hiraeth/session": "^3.0@beta"
    },
    "autoload": {
        "classmap": ["local/"],
        "psr-0": {
            "" : "local/"
        }
    },
    "config": {
        "platform": {
            "php": "8.2"
        },
        "allow-plugins": {
            "imarc/opus": true
        }
    },
    "extra": {
        "opus": {
            "enabled": true
        }
    }
}
